{
  "manifest_version": 3,
  "name": "CleanTube",
  "version": "1.0",
  "description": "A Chrome extension to clean YouTube UI elements",
   "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [],
  "host_permissions": [
    "*://www.youtube.com/*"
  ]
}